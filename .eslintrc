{
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "globals": {
    "__DEV__": true,
    "__SERVER__": true,
    "__LANGUAGE__": true,
    "__WEBVIEW__": true,
    "__DEV_SERVER__": true,
    "doorbell": true
  },
  "ecmaFeatures": {
    "jsx": true
  },
  "rules": {
    "strict": [2, "never"],
    "indent": [2, 2, {"SwitchCase": 1}],
    "no-undef": 2,
    "no-unused-vars": [1, { "args": "none" }],
    "react/jsx-uses-vars": 2,
    "react/jsx-uses-react": 2,
    "react/no-find-dom-node": 2,
    "react/jsx-no-undef": 2,
    "react/no-danger": 2
  }
}
